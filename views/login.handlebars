<div class="row mt-3">
  <div class="col-md-6 m-auto">
    <div class="card-body">
      <h2 class="card-title text-center">登入</h2>

      {{> message}}

      <form action="/users/login" method="POST">
        <div class="form-group mt-3">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="example@example.com"
            value="{{email}}" required>
        </div>
        <div class="form-group mt-3  mb-3">
          <label for="password">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="*****"
            value="{{password}}" required>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-outline-secondary">送出資料</button>
        </div>
      </form>
      <p class="mt-4">還沒註冊？
        <i class="fas fa-hand-point-right"></i>
        <a href="/users/register" style="text-decoration: none;">前往註冊</a>
      </p>
      <p>用Facebook登入
        <a href="/auth/facebook">
          <i class="fab fa-facebook" style="font-size: 30px;"></i>
        </a>
      </p>
    </div>
  </div>
</div>