<h1 class="mb-1 restaurant-show-title">編輯 {{restaurant.name}}餐廳資料</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-8 mx-auto">
      <form action="/restaurant/{{ restaurant._id }}?_method=PUT" method="POST">

        <div class="mb-3">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            <label for="name" class="form-label">店名</label>
            <input type="text" class="form-control" id="name" placeholder="{{restaurant.name}}" name="name"
              value="{{restaurant.name}}" required />
          </span>
        </div>

        <div class="mb-3">
          <span class="text-secondary">
            <i class="fas fa-bookmark"></i>
            <label for="category" class="form-label">類別</label>
            <input type="text" class="form-control" id="category" placeholder="{{restaurant.category}}" name="category"
              value="{{restaurant.category}}" required />
          </span>
        </div>

        <div class="mb-3">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            <label for="location" class="form-label">地址</label>
            <input type="text" class="form-control" id="location" placeholder="{{restaurant.location}}" name="location"
              value="{{restaurant.location}}" required />
          </span>
        </div>

        <div class="mb-3">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            <label for="phone" class="form-label">電話</label>
            <input type="tel" class="form-control" id="phone" placeholder="{{restaurant.phone}}" name="phone"
              value="{{restaurant.phone}}" required />
          </span>
        </div>

        <div class="mb-3">
          <span class="text-secondary">
            <i class="fas fa-pencil-alt"></i>
            <label for="description" class="form-label">店家介紹</label>
            <textarea class="form-control" id="description" rows="3"
              name="description">{{restaurant.description}}</textarea>
          </span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>

        <a href="/">
          <button type="button" class="btn btn-primary">
            back
          </button>
        </a>

      </form>

      <div style="display: inline-block;" class="mt-1">
        <form action="/restaurant/{{restaurant._id}}?_method=DELETE" method="POST">
          <button type="submit" class=" btn btn btn-warning text-white">delete</button>
        </form>
      </div>

      <img class="rounded mx-auto d-block mt-3 mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">

    </div>
  </div>
</div>