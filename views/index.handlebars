<!-- search bar -->
<div class="container-fluid">

  <div class="container search-bar">
    <div class="search-bar-outer">
      <div class="search-bar-inner">

        <form action="/search" style="max-width: 800px;">
          <div class="input-group">
            <input type="text" name="keyword" value="{{rawKeyword}}" class="form-control" placeholder="輸入餐廳、分類"
              aria-label="Restaurant Name..." value="" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
            <select class="form-select ms-5" style="max-width: 150px;" aria-label="Default select example" id="sort"
              name="sort">
              <option value="1">A->Z</option>
              <option value="2">Z->A</option>
              <option value="4">類別</option>
              <option value="5">地區</option>
            </select>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>

<div class="col-4 m-auto text-center">
  {{> message}}
</div>

<div class=" container-sm mt-3 mb-5">
  <div class="row row-cols-md-3 g-4">

    {{#each restaurants}}
    <div class="col-4">
      <div class="card">
        <a href="./restaurant/{{this._id}}" class="text-secondary" style="text-decoration:none">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body">
            <h6 class="card-title mb-1">{{this.name}}</h6>
            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>
            <span class="badge rounded-pill bg-danger">{{this.rating}}
              <i class="fas fa-star fa-xs"></i></span>

            <div>
              <a href="./restaurant/{{this._id}}/edit">Edit</a>
              <a href="./restaurant/{{this._id}}">Detail</a>

              <form action="/restaurant/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn btn-warning btn-sm text-white">delete</button>
              </form>

            </div>
          </div>
        </a>
      </div>
    </div>
    {{/each}}

  </div>
</div>