<div class="row mt-3">
  <div class="col-md-6 m-auto">
    <div class="card-body">
      <h2 class="card-title text-center">註冊</h2>

      {{> message}}

      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">姓名</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="王小明" value="{{name}}">
        </div>
        <div class="form-group mt-3">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="example@example.com"
            value="{{email}}">
        </div>
        <div class="form-group mt-3">
          <label for="password">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="*****"
            value="{{password}}">
        </div>
        <div class="form-group mt-3 mb-3">
          <label for="confirmPassword">再輸入一次密碼</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="*****"
            value="{{confirmPassword}}">
        </div>
        <div class=" text-center">
          <button type="submit" class="btn btn-outline-secondary">送出資料</button>
        </div>
      </form>
      <p class="lead mt-4">已經擁有帳號
        <i class="fas fa-hand-point-right"></i>
        <a href="/users/login">前往登入</a>
      </p>
    </div>
  </div>
</div>